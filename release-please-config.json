{
  "pull-request-title-pattern": "chore: release ${version}",
  "packages": {
    ".": {
      "release-type": "go",
      "component": "omen"
    },
    ".claude-plugin": {
      "release-type": "simple",
      "component": "omen-skills",
      "extra-files": [
        {
          "type": "json",
          "path": "plugin.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "marketplace.json",
          "jsonpath": "$.plugins[0].version"
        }
      ]
    }
  }
}
